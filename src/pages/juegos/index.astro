---
import Layout from "../../layouts/Layout.astro";
import { JUEGOS } from "../../const/juegos";
---

<Layout title="Juegos">
  <main class="flex items-center flex-col">
    <div>
      <h1 class="text-center text-4xl text-green mb-5">proximos juegos</h1>
      <div class="flex flex-col md:flex-row gap-4 flex-wrap justify-evenly">
        {
          JUEGOS.map(({ id, nombre, fecha, campo, juegos }) => (
            <div class="p-6 bg-slate-600 mb-2 rounded-lg shadow-white">
              <div class="flex flex-col items-center gap-y-2">
                <h2 class="text-2xl">{nombre}</h2>
                <span class="text-sm text-green">{fecha}</span>
                <span class="text-xs">{campo}</span>
                <div class="flex flex-col items-center">
                  <h3 class="text-xl text-green mb-2">Juegos</h3>
                  <div class="flex flex-col gap-2">
                    {juegos.map(({ id, equipo1, equipo2 }) => (
                      <a
                        href={`/juegos/${id}`}
                        class="text-sm hover:text-green hover:scale-x-105"
                        transition:name={`title-${id}`}
                      >
                        {equipo1} <span class="text-green">vs</span> {equipo2}
                      </a>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </main>
</Layout>
