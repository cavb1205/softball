---
import Layout from "../../layouts/Layout.astro";
import { PLAYERS } from "../../const/players";
import Sponsors from "../../sections/Sponsors.astro";
const { id } = Astro.params;
const player = PLAYERS.find((player) => player.id === id);
---

<Layout title={`Perfil de ${player.nombre}`}>
  <a
    href={`/equipos/${player.equipo}`}
    class="hover:bg-slate-200/10 px-5 py-8 text-md"><span>Volver</span></a
  >

  <div class="flex flex-col md:flex-row justify-center items-center">
    <div class="flex flex-col my-5">
      <h3 class="text-xl md:text-2xl flex flex-col gap-3">
        <span class="text-green">Equipo</span>
        <span>Angeles</span>
      </h3>
    </div>
    <div class="flex flex-col items-center justify-center">
      <h1
        class="text-4xl md:text-6xl text-green -rotate-5 mb-10"
        transition:name="player-title"
      >
        {player.nombre}
        {player.apellido}
      </h1>
      <img
        transition:name="player-image"
        src={`/img/jugadores/${player.id}.webp`}
        alt={`Foto de ${player.nombre} ${player.apellido}`}
        class="w-96 h-auto"
        style="mask-image: linear-gradient(to bottom, black 80%, transparent 100%);"
      />
      <img
        src={`/img/pais/${player.pais}.svg`}
        alt={`Bandera de ${player.pais}`}
        class="w-20"
      />
    </div>
    <div class="flex flex-col gap-3 md:gap-10">
      <div class="text-lg md:text-2xl text-center flex flex-col gap-3 my-2">
        <span class="text-green">Edad</span>
        <span> {player.edad} años</span>
      </div>
      <div class="text-lg md:text-2xl text-center flex flex-col gap-3">
        <span class="text-green">Posición</span>
        <span> {player.posicion}</span>
      </div>
    </div>
  </div>
  <div class="my-20">
    <h4 class="text-green md:text-2xl text-center mb-2">Redes Sociales</h4>
    <div class="flex flex-row justify-center items-center gap-5">
      <a
        href={player.social?.facebook}
        class="hover:bg-white/10 px-5 py-5 text-md bg-white/5"
        ><img
          src={`/img/icons/facebook.svg`}
          class="md:w-16 w-10 text-white hover:scale-110"
        /></a
      >
      <a
        href={player.social?.instagram}
        class="hover:bg-white/10 px-5 py-5 text-md bg-white/5"
        ><img
          src={`/img/icons/instagram.svg`}
          class="md:w-16 w-10 text-white hover:scale-110"
        /></a
      >
    </div>
  </div>
  <Sponsors />
</Layout>
