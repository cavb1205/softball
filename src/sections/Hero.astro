---
import HeroLogo from "../components/HeroLogo.astro";
const nombre = "primavera verano"
const año = 2024
---

<section class="flex flex-col place-items-center">
    <div class="relative ">
        <h2 class="text-secondary text-center mb-2 text-xl font-bold -rotate-3">Torneo de Sóftbol</h2>
        <h1 class="text-secondary font-extrabold text-4xl md:text-7xl text-center capitalize -rotate-3 hover:scale-105 transition">{nombre} <br/> <span class="text-xl">{año}</span></h1>
        <img src="/img/logo.svg" alt="logo" class="absolute inset-x-0 top-12 w-full md:w-auto mx-auto text-green opacity-40" />
    </div>
</section>